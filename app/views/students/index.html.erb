<h1>Students Account List</h1>

<table >
  <thead>
    <tr>
      <th>UserName</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.username %></td>
        <td><%= student.password %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
      <%end%>
  </tbody>
</table>
